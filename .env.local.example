# Example environment variables for medicare-vision-ai
# Copy to .env.local and fill values before starting the server

# Resend API (recommended) - sign up at https://resend.com
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@yourdomain.com

# SMTP fallback (if not using Resend)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# Optional: set to 'true' for secure (465) connections
SMTP_SECURE=false
# JWT secret for signing auth tokens (change in production)
JWT_SECRET=your_jwt_secret_here
